<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/cardview_list"
        card_view:cardBackgroundColor="#ffffffff"
        card_view:cardCornerRadius="0dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:background="#ffffffff">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff262626">

            <TextView
                android:id="@+id/saved_title_text"
                android:layout_width="match_parent"

                android:layout_height="100dp"
                android:layout_alignBottom="@+id/saved_image"
                android:layout_alignParentTop="true"

                android:paddingLeft="5dp"
                android:layout_margin="0dp"
                android:gravity="center_vertical"


                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/saved_image"
                android:layout_toStartOf="@+id/saved_image"

                android:text="This s for tilte"
                android:textColor="#ffffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/saved_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>