<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#ff6e6e6e"
    android:orientation="vertical"
    android:id="@+id/list_item_linarlayout_1">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"

        card_view:cardBackgroundColor="#ffffffff"
        card_view:cardCornerRadius="0dp"
        android:layout_margin="5dp"

        android:id="@+id/cardview_list"
       >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:text="This s for tilte"
            android:textColor="#ffffffff"
            android:textSize="22dp"

            android:id="@+id/title_text"
            android:background="#ff444444"

            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/divider_listitem"
            android:layout_height="1dp"
            android:background="#ffaaaaaa"
            android:layout_alignBottom="@+id/title_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textColor="#fff4f4f4"
            android:text="this text view for content of the newsthis text view for content of the news "

            android:background="#424242"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"


            android:id="@+id/content_text"
            android:layout_below="@+id/title_text"
            android:layout_alignRight="@+id/title_text"
            android:layout_alignEnd="@+id/title_text"
            android:textSize="17dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/listitem_relativelayout"
            android:layout_height="wrap_content"
            android:background="#424242"
            android:layout_below="@+id/content_text"
            android:layout_alignLeft="@+id/content_text"
            android:layout_alignStart="@+id/content_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="date"
                android:textColor="#ff00eeff"
                android:id="@+id/date_text"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />


        </RelativeLayout>




    </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>